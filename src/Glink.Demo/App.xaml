             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Glink.Demo;component/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Glink.Demo;component/Styles/FontResources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Glink.Demo;component/Styles/ColorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator x:Key="Locator" xmlns:vm="clr-namespace:Glink.Demo"/>
